{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "downlevelIteration": true,
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "lib",
    "baseUrl": "lib",
    "paths": {
      "@/*": ["*"]
    },
    "types": ["node", "jest"],
    "typeRoots": ["./lib/@types", "./node_modules/@types"]
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules"]
}
