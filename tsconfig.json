{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "lib",
    "baseUrl": "lib",
    "paths": {
      "@/*": ["*"]
    },
    "typeRoots": ["./lib/@types", "./lib/node_modules/@types"]
  },
  "include": ["lib/**/*", "index.ts"],
  "exclude": ["node_modules"]
}